@model LMS4Carroll.Models.ApplicationRoleViewModel
@using LMS4Carroll.Models

@{
    ViewData["Title"] = "Edit | Roles";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Edit Role</div>
    <div class="panel-body">
        <br />
        <form asp-action="AddEditApplicationRole">
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="RoleName" class="col-md-2 form-control-label required"></label>
                    <div class="col-md-10">
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="col-md-2 form-control-label required"></label>
                    <div class="col-md-10">
                        <textarea type="string" asp-for="Description" class="form-control" rows="6"> @Model.Description</textarea>
                        <span type="string" asp-validation-for="Description" class="text-danger" />
                    </div>
                </div>
                <div id="editbtn" class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <a asp-action="Index" class="btn btn-danger">
                            <i class="glyphicon glyphicon-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

