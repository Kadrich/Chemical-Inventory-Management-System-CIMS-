                <dt>
                    @Html.DisplayNameFor(model => model.Barcode)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Barcode)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ChemID)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ChemID)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.NormalizedLocation)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NormalizedLocation)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Department)
                </dt>
