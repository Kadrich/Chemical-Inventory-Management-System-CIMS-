                    @Html.DisplayFor(model => model.Manufacturer)
                </dd>
            </d1>
            <form asp-action="Archive" id="archivebtn">
                <div class="form-actions no-color">
                    <a asp-action="Index" class="btn btn-default">
                        <i class="glyphicon glyphicon-arrow-left"></i> Back to List
                    </a>
                    <input type="submit" value="Archive" class="btn btn-warning" />
                </div>
            </form>
