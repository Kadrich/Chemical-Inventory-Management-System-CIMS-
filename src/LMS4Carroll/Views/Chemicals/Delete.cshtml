@model LMS4Carroll.Models.Chemical

@{
    ViewData["Title"] = "Delete | Chemical";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    @if (ViewData["ItemInUse"] == null)
    {
        <div class="panel-heading panel-heading">Are you sure you want to delete this?</div>
    }
    else
    {
        <div>
            <i class="glyphicon glyphicon-remove"></i>  <h3>The item: @ViewData["ItemInUse"] is used by an inventory entry and cannot be deleted.</h3>
            To successfully delete this item, all entries in the Chemicals Inventory that use this item must first be deleted or changed to use a different item.
        </div>
    }
    <div class="panel-body">
        <br />
        <div>
            <h4>Chemical</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.CAS)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CAS)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.CAT)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CAT)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Formula)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Formula)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.FormulaName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FormulaName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.FormulaWeight)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FormulaWeight)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Hazard)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Hazard)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.SDS)
                </dt>
                <dd>
                    <a href="@Model.SDS">Go To</a>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.State)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.State)
                </dd>
            </dl>

            <form asp-action="Delete" id="deletebtn">
                <div class="form-actions no-color">
                    <a asp-action="Index" class="btn btn-default">
                        <i class="glyphicon glyphicon-arrow-left"></i> Back to List
                    </a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>
