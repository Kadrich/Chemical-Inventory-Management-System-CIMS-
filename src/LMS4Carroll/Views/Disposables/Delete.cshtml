@model LMS4Carroll.Models.Disposable

@{ 
    ViewData["Title"] = "Delete | Disposable";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    @if (ViewData["ItemInUse"] == null)
    {
        <div class="panel-heading panel-heading">Are you sure you want to delete this?</div>
    }
    else
    {
        <div>
            <i class="glyphicon glyphicon-remove"></i>  <h3>The item: @ViewData["ItemInUse"] is used by an inventory entry and cannot be deleted.</h3>
            To successfully delete this item, all entries in the Disposables Inventory that use this item must first be deleted or changed to use a different item.
        </div>
    }
    <div class="panel-body">
        <br />
        <div>
            <h4>Disposable</h4>
            <hr />
            <d1 class="d1-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.DispoID)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DispoID)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.DispoName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DispoName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Comments)
                </dt>
                <dd>
                    @Html.Raw(Model.Comments)
                </dd>
            </d1>

            <form asp-action="Delete" id="deletebtn">
                <div class="form-actions no-color">
                    <a asp-action="Index" class="btn btn-default">
                        <i class="glyphicon glyphicon-arrow-left"></i> Back to List
                    </a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>