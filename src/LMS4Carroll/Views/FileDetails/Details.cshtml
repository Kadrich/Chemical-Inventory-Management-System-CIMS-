@model LMS4Carroll.Models.FileDetail

@{
    ViewData["Title"] = "Details | Invoice";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Invoice Details</div>
    <div class="panel-body">
        <br />
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.FileName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FileName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.FileType)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FileType)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ContentType)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ContentType)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.DatetimeCreated)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DatetimeCreated)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.OrderID)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.OrderID)
                </dd>
            </dl>
            <p>
                @if (!Model.FileType.Equals("pdf"))
                {
                <dd>
                    Click image for a better view
                </dd>
                }
            </p>
            <p>
                <a href="/FileDetails/InvoiceImage/@Model.FileDetailID">
                    @if (!Model.FileType.Equals("pdf"))
                    {
                        <img src="/FileDetails/InvoiceImage/@Model.FileDetailID" width="400" height="550" />
                    }
                    else
                    {
                        <iframe src="/FileDetails/InvoiceImage/@Model.FileDetailID" width="1000" height="550" />
                    }
                </a>
            </p>
        </div>
        <div id="deletebtn">
            <div class="form-actions no-color">
                <a asp-action="Index" class="btn btn-default">
                    <i class="glyphicon glyphicon-arrow-left"></i> Back to List
                </a>
                <a asp-controller="Orders" asp-action="Edit" class="btn btn-info" asp-route-id="@Model.OrderID">Edit</a><br />
            </div>
        </div>
    </div>
</div>