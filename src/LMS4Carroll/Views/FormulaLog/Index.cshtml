@model IEnumerable<LMS4Carroll.Models.FormulaLog>

@{
    ViewData["Title"] = "List | FormulaLog";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Formula Logs</div>
    <div class="panel-body table-responsive">
        <form asp-controller="FormulaLog" asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p>
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" id="SearchString" />
                    <input type="submit" value="Search" class="btn btn-default" />
                    <a asp-action="Index" class="btn btn-default">Back to Full List</a>
                </p>
            </div>
        </form>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.ActionLink("Formula Name", "Index", new { searchString = ViewData["CurrentFilter"], sortOrder = ViewData["FormulaSort"] })
                    </th>
                    <th>
                        @Html.ActionLink(Html.DisplayNameFor(model => model.Name), "Index", new { searchString = ViewData["CurrentFilter"], sortOrder = ViewData["NameSort"] })
                    </th>
                    <th>
                        @Html.ActionLink(Html.DisplayNameFor(model => model.Date), "Index", new { searchString = ViewData["CurrentFilter"], sortOrder = ViewData["DateSort"] })
                    </th>
                    <th>
                        @Html.ActionLink(Html.DisplayNameFor(model => model.ChemicalList), "Index", new { searchString = ViewData["CurrentFilter"], sortOrder = ViewData["ChemicalSort"] })
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
           @foreach (var item in Model)
           {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormulaID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChemicalList)
                    </td>
                    <td>
                        <a id="editbtn" asp-action="Edit" asp-route-id="@item.LogID" class="btn btn-info">
                            <i class="glyphicon glyphicon-pencil"></i>  Edit
                        </a>
                        <a id="detailsbtn" asp-action="Details" asp-route-id="@item.LogID" class="btn btn-info loc3">
                            <i class="glyphicon glyphicon-search"></i> Details
                        </a>
                        <a id="deletebtn" asp-action="Delete" asp-route-id="@item.LogID" class="btn btn-danger loc3">
                            <i class="glyphicon glyphicon-trash"></i>  Delete
                        </a>
                    </td>

                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
